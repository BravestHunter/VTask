@model PasswordResetSendMessageModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Password Reset Request";
}

<form method="post" class="mb-4">
    <h3 class="fw-bold mb-2 text-uppercase">Password reset request</h3>

    <div class="form-outline form-white mb-4">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control form-control-lg" />
        <span asp-validation-for="Username" class="validation-error-message"></span>
    </div>

    <p class="small pb-1">
        <a asp-action="PasswordResetMessageSend" class="text-white-50">Forgot password?</a>
    </p>

    <div>
        <button class="btn btn-outline-light btn-lg px-5" type="submit">Send email</button>
    </div>
</form>
