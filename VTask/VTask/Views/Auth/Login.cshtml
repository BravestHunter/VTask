@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<form method="post" class="mb-4">
    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>

    <div class="form-outline form-white mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control form-control-lg" />
    </div>

    <div class="form-outline form-white mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control form-control-lg" />
    </div>

    <div class="pb-1">
        <ul asp-validation-for-all class="validation-error-message"></ul>
    </div>

    <p class="small pb-1">
        <a asp-action="PasswordResetMessageSend" class="text-white-50">Forgot password?</a>
    </p>

    <div>
        <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
    </div>
</form>

<div>
    <p class="mb-0">
        Don't have an account? <a asp-action="Register" class="text-white-50 fw-bold">Register</a>
    </p>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
