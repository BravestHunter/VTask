@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<form method="post" class="mb-md-5">

    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
    <p class="text-white-50 mb-5">Please enter your login and password!</p>

    <div class="form-outline form-white mb-4">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control form-control-lg" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-outline form-white mb-4">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control form-control-lg" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <p class="small mb-5 pb-lg-2">
        <a asp-action="PasswordResetMessageSend" class="text-white-50">Forgot password?</a>
    </p>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

</form>

<div>
    <p class="mb-0">
        Don't have an account? <a asp-action="Register" class="text-white-50 fw-bold">Register</a>
    </p>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
