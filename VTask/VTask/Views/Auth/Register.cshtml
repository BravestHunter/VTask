@model RegisterRequestDto
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<form method="post" class="mb-md-5 mt-md-4">

    <h2 class="fw-bold mb-2 text-uppercase">Registration</h2>

    <div class="form-outline form-white mb-4">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control form-control-lg" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-outline form-white mb-4">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control form-control-lg" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>

</form>

<div>
    <p class="mb-0">
        Already have an account? <a asp-action="Login" class="text-white-50 fw-bold">Login</a>
    </p>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
