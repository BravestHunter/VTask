@model UserModel
@{
    ViewData["Title"] = "Account info";
}

<div>
    <h1 class="text-center p-5">Account info</h1>
</div>

<div class="container-fluid bg-info rounded-borders-block py-3">

    <h2 class="text-center text-light pb-4">@(User.Identity?.Name ?? string.Empty)</h2>

    <div class="row">
        <div class="col-lg-6">
            <div class="bg-light rounded-borders-block m-2">
                <div class="input-group">
                    <label asp-for="Nickname" class="input-label-block p-2 px-4"></label>
                    <input asp-for="Nickname" class="form-control rounded-borders-block" disabled />
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="bg-light rounded-borders-block m-2">
                <div class="input-group">
                    <label asp-for="Email" class="input-label-block p-2 px-4"></label>
                    <input asp-for="Email" class="form-control rounded-borders-block" disabled />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="d-grid gap-2 col-6 mx-auto pt-4">
            <a asp-action="Edit" class="btn btn-outline-light">Edit</a>
            <a asp-action="ChangeUsername" class="btn btn-outline-light">Change username</a>
            <a asp-action="ChangePassword" class="btn btn-outline-light">Change password</a>

            @if (!Model.EmailConfirmed)
            {
                <a asp-action="VerifyEmailMessageSend" class="btn btn-outline-light">Verify Email</a>
            }

        </div>
    </div>

</div>
