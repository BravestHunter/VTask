@model DeleteTaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<form method="post">
    <div class="container">
        <div class="row">
            <h2 class="text-primary">Delete task</h2>
        </div>
        <div>
            <label asp-for="Id"></label>
            <input disabled asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn-primary">Delete</button>
        <a asp-controller="Task" asp-action="All" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
